<h1>Chọn vai trò cho người dùng</h1>
<form action="" method="post">
  <% roles.forEach(role => { %>
  <label class="mb-2 d-block">
    <input type="checkbox" name="roles" value="<%= role.id %>" <%= isRole(user,
    role.id) ? 'checked': '' %>/> <%= role.name %>
  </label>
  <% }) %>

  <button class="btn btn-primary">Lưu</button>
  <a href="/users" class="btn btn-danger">Hủy</a>
</form>
