<h1>Sửa người dùng</h1>
<form action="" method="post">
  <div class="mb-3">
    <label for="">Tên</label>
    <input
      type="text"
      class="form-control"
      name="name"
      placeholder="Tên..."
      value="<%= user.name %>"
    />
  </div>
  <div class="mb-3">
    <label for="">Email</label>
    <input
      type="text"
      class="form-control"
      name="email"
      placeholder="Email..."
      value="<%= user.email %>"
    />
  </div>
  <div class="mb-3">
    <label for="">Mật khẩu</label>
    <input
      type="password"
      class="form-control"
      name="password"
      placeholder="Mật khẩu..."
    />
  </div>
  <div class="mb-3">
    <label for="">Trạng thái</label>
    <select name="status" class="form-select">
      <option value="0" <%= !user.status ? 'selected': '' %>>Chưa kích hoạt</option>
      <option value="1" <%= user.status ? 'selected': '' %>>Kích hoạt</option>
    </select>
  </div>
  <div class="mb-3">
    <label for="">Khóa học</label>
    <% courses.forEach(course => { %>
    <label class="mb-3 d-block">
      <input type="checkbox" name="courses" value="<%= course.id %>" <%= courseUtils.isCourse(user, course.id) ? 'checked': '' %>/> <%=
      course.name %>
    </label>
    <% }) %>
  </div>
  <button class="btn btn-primary">Lưu</button>
</form>
